<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Tienda.Registrar"
             Title="Registrar">
    <StackLayout Margin="20">
        <Entry Placeholder="Nombre" x:Name="NombreEntry" />
        <Entry Placeholder="Dirección" x:Name="DireccionEntry" />
        <Entry Placeholder="Correo" x:Name="CorreoEntry" />
        <Entry Placeholder="Teléfono" x:Name="TelefonoEntry" />
        <Entry Placeholder="Foto" x:Name="FotoEntry" />
        <Entry Placeholder="Contraseña" x:Name="ContraseñaEntry" IsPassword="True" />

        <Button Text="Registrarse" Clicked="RegistrarseButton_Clicked" />
    </StackLayout>
</ContentPage>
