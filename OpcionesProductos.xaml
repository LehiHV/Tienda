<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Tienda.OpcionesProductos"
             Title="OpcionesProductos">
    <VerticalStackLayout>
        <StackLayout>
            <Button Text="Agregar Producto" TextColor="White" BackgroundColor="Transparent" HorizontalOptions="Start" Clicked="AgregarProducto_Clicked"/>
            <Button Text="Cambiar Datos del Producto" TextColor="White" BackgroundColor="Transparent" HorizontalOptions="Start" Clicked="CambiarInformacion_Clicked"/>
            <Button Text="Eliminar Producto" TextColor="White" BackgroundColor="Transparent" HorizontalOptions="Start" Clicked="EliminarProducto_Clicked"/>
        </StackLayout>
    </VerticalStackLayout>
</ContentPage>